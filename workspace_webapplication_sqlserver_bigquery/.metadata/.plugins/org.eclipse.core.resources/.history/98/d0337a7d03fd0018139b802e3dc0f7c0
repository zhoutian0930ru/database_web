	<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
	<script>
	

		$('.query > button').on('click',function(){
			var module="1";
			
			if(document.getElementById('mysql').checked){
				module="sql_server";
			}
			else{
				if(document.getElementById('redshift').checked){
					directed_url="http://localhost:8080/project2/servletBigQuery";
				}		
			}

		
			let sqltxt = $('.query > textarea').val().trim()
			if(!sqltxt) return false;
			$.ajax({
				url: "http://localhost:8080/project2_test1/servletdemo",
				
				method:'get',
				async:false,
				//dataType:'json',
				data:{
					"sql":sqltxt,
	                "module":module.toString()                
                }
			}).done(function(res){
				alert('success test')  //TEST OUTPUT
				
				var html;
				var object;
					
				//TITLE
				html += "<tr>";
				$.each(res,function(i,val){
            		object=val;
	            });			
           		$.each(object,function(key,val2){   
	            	html += "<td>";
                    html += key;
                    html += "</td>";
                });
				html += "</tr>";
				
				
				//INDEX	
				$.each(res,function(i,val){
            		html += "<tr>";
            		$.each(val,function(key,val2){
   
		            	html += "<td>";
	                    html += val2;
	                    html += "</td>";
	                });
	                html += "</tr>";
	            });
	 			$("#table1").html(html);
	 			
	 			
	 			

			}).fail(function(err){
				alert("Invalid SQL Statement")
			})
		})
	</script>
